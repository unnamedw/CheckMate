<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.msg_b.checkmate.mainFragment.activityInProfile.ProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/typocrayonm"
                    android:text="PICTURES" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="364dp">

                <ImageView
                    android:id="@+id/Iv_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/Iv_profile4"
                    android:layout_marginTop="51dp"
                    android:background="@drawable/iv_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_plus" />

                <ImageView
                    android:id="@+id/Iv_profile2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/Iv_profile"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/iv_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_plus" />

                <ImageView
                    android:id="@+id/Iv_profile3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignStart="@+id/Iv_profile6"
                    android:layout_alignTop="@+id/Iv_profile"
                    android:background="@drawable/iv_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_plus" />

                <ImageView
                    android:id="@+id/Iv_profile4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/Iv_profile5"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/iv_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_plus" />

                <ImageView
                    android:id="@+id/Iv_profile5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/iv_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_plus" />

                <ImageView
                    android:id="@+id/Iv_profile6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/Iv_profile5"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/iv_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_plus" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/Iv_profile"
                    android:layout_marginStart="42dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:text="필수"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ececec"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center">

                <Button
                    android:id="@+id/Btn_commit"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_button2"
                    android:text="정보수정하기"
                    android:textColor="#efefef"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/Btn_commit_X"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:text="저장"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:visibility="gone" />


</RelativeLayout>