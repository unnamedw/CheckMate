<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.msg_b.checkmate.mainFragment.profileFragment.Sub1ProfileFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/typocrayonm"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Iv_main"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="329dp">

                <ImageView
                    android:id="@+id/Iv_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/Iv_profile4"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/iv_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_plus" />

                <ImageView
                    android:id="@+id/Iv_profile2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/Iv_profile"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/iv_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_plus" />

                <ImageView
                    android:id="@+id/Iv_profile3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignStart="@+id/Iv_profile6"
                    android:layout_alignTop="@+id/Iv_profile"
                    android:background="@drawable/iv_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_plus" />

                <ImageView
                    android:id="@+id/Iv_profile4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/Iv_profile5"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/iv_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_plus" />

                <ImageView
                    android:id="@+id/Iv_profile5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/iv_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_plus" />

                <ImageView
                    android:id="@+id/Iv_profile6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/Iv_profile5"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/iv_border"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_plus" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/Iv_profile"
                    android:layout_marginStart="42dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:text="필수"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ececec"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.2"
                        android:gravity="center"
                        android:text="닉네임"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/Et_nickname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:layout_weight="7.8"
                        android:background="@drawable/tv_border"
                        android:maxLength="6"
                        android:textSize="13dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/Tv_nickname_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="13dp"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView53"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.2"
                        android:gravity="center"
                        android:text="직업"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/Et_job"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:layout_weight="7.8"
                        android:background="@drawable/tv_border"
                        android:maxLength="8"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="지역"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/Tv_live"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@drawable/tv_border"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/Tv_live_check"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="지역선택"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView533"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.2"
                        android:gravity="center"
                        android:text="자기소개"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/Et_introduce"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="7.8"
                        android:background="@drawable/tv_border"
                        android:maxLength="50"
                        android:scrollbars="vertical"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>